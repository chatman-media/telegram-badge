{
  "branches": [
    "main",
    {
      "name": "develop",
      "prerelease": "beta"
    }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/npm",
      {
        "npmPublish": true
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node -e \"const fs=require('fs'); const pkg=JSON.parse(fs.readFileSync('jsr.json')); pkg.version='${nextRelease.version}'; fs.writeFileSync('jsr.json', JSON.stringify(pkg, null, 2) + '\\n');\""
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json", "package-lock.json", "jsr.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/api/*.js",
            "label": "API files"
          },
          {
            "path": "dist/api/*.d.ts",
            "label": "API type definitions"
          },
          {
            "path": "dist/types/*.js",
            "label": "Type files"
          },
          {
            "path": "dist/types/*.d.ts",
            "label": "Type definitions"
          },
          {
            "path": "dist/tests/*.test.js",
            "label": "Test files"
          },
          {
            "path": "dist/tests/*.test.d.ts",
            "label": "Test type definitions"
          }
        ]
      }
    ]
  ]
}
